// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C++ Clean",
      "type": "shell",
      "command": "if exist \"${fileDirname}\\${fileBasenameNoExtension}.exe\" del \"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/d",
            "/c"
          ]
        }
      },
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "C++ Build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-O0",
        "-Wall",
        // "-Werror",
        "-std=c++17",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "dependsOn": "C++ Clean",
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}