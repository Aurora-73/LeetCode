// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C++ Clean",
      "type": "shell",
      "command": "if exist \"${fileDirname}\\${fileBasenameNoExtension}.exe\" del \"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/d",
            "/c"
          ]
        }
      },
      "presentation": {
        "reveal": "silent", // ğŸ‘ˆ ä¸æŠ¢å è¾“å‡ºé¢æ¿
        "echo": false,
        "focus": false,
        "panel": "dedicated" // ğŸ‘ˆ ä½¿ç”¨ç‹¬ç«‹é¢æ¿é¿å…å¹²æ‰° build è¾“å‡º
      },
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "build-dll",
      "type": "shell",
      "command": "D:/mingw64/bin/g++.exe",
      "args": [
        "-std=c++20",
        "-O2",
        "-shared",
        // "-Wl,--out-implib,E:/Code/LeeCode/libmylibs.a",
        "-Wl,--export-all-symbols",
        "E:/Code/LeeCode/MyDateGen.cpp",
        "E:/Code/LeeCode/MyListNode.cpp",
        "E:/Code/LeeCode/MyTreeNode.cpp",
        "-I",
        "E:/Code/LeeCode",
        "-o",
        "E:/Code/LeeCode/mylibs.dll"
      ],
      "options": {
        "cwd": "E:/Code/LeeCode",
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/d",
            "/c"
          ]
        }
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "build-main",
      "type": "shell",
      // "dependsOn": [
      //   "C++ Clean",
      // ],
      "command": "D:/mingw64/bin/g++.exe",
      "args": [
        "-g",
        "-O0",
        "-Wall",
        "-std=c++20",
        "${file}",
        "-I${workspaceFolder}",
        "-L${workspaceFolder}",
        "-lmylibs",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}